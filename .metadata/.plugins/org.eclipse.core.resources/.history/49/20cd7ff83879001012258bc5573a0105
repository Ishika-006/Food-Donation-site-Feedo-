package com.ishika.foodwaste.web.service;

import org.springframework.stereotype.Service;

@Service
public class DeliveryLocationService {

    @Autowired
    private DeliveryPersonRepository deliveryPersonRepository;

    @Autowired
    private DeliveryLocationRepository deliveryLocationRepository;

    public void saveOrUpdateLocation(Long deliveryId, LocationDto location) {
        // Find DeliveryPerson entity by deliveryId
        DeliveryPerson person = deliveryPersonRepository.findById(deliveryId).orElseThrow(() -> new RuntimeException("Not found"));

        // Check if location record exists
        DeliveryLocation existingLocation = deliveryLocationRepository.findByDeliveryPerson(person);

        if(existingLocation == null) {
            existingLocation = new DeliveryLocation();
            existingLocation.setDeliveryPerson(person);
        }

        existingLocation.setLatitude(location.getLatitude());
        existingLocation.setLongitude(location.getLongitude());
        existingLocation.setTimestamp(LocalDateTime.now());

        deliveryLocationRepository.save(existingLocation);
    }

    public LocationDto getLocation(Long deliveryId) {
        DeliveryPerson person = deliveryPersonRepository.findById(deliveryId).orElseThrow(() -> new RuntimeException("Not found"));
        DeliveryLocation location = deliveryLocationRepository.findByDeliveryPerson(person);

        if(location != null) {
            return new LocationDto(location.getLatitude(), location.getLongitude());
        }
        // fallback if no location found
        return new LocationDto(0.0, 0.0);
    }
}
